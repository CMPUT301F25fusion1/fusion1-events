<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Button fill color -->
    <solid android:color="#B0B0B0" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#B0B0B0" />

    <!-- Internal padding between text and edges -->
    <padding
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp" />
</shape>
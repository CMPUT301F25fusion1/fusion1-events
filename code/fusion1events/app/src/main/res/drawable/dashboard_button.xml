<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Button fill color -->
    <solid android:color="#B0B0B0" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#B0B0B0" />

    <!-- Internal padding between text and edges -->
    <padding
        android:top="50dp"
        android:bottom="50dp"
        android:left="12dp"
        android:right="12dp" />
</shape>
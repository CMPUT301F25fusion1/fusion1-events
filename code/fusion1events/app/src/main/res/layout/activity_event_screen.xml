<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_menu_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menu bar -->
        <TextView
            android:id="@+id/tvHome"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Home"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvYourEvents"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Your Events"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Scan"
            android:gravity="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonProfileEntrantHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#808080"
            android:text="@string/Profile"
            android:textColor="@android:color/white"
            android:visibility="visible"
            app:cornerRadius="0dp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Notifications"
            android:gravity="center"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Second menu bar -->
    <LinearLayout
        android:id="@+id/filter_bar"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="#E8E8E8"
        app:layout_constraintTop_toBottomOf="@id/top_menu_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Interest"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Date"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Location"
            android:gravity="center"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/events_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/filter_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Guidelines button -->
    <Button
        android:id="@+id/lottery_guidelines_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lottery Guidelines"
        android:backgroundTint="#8A5ED6"
        android:textColor="#FFFFFF"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/events_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Event List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/events_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lottery_guidelines_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp"
        android:clipToPadding="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
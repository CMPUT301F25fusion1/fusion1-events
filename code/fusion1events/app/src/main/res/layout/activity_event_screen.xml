<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/notificationBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E6D4FF"
        android:padding="16dp"
        android:orientation="vertical"
        android:elevation="16dp"
        android:translationZ="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/notificationBannerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Text"
        android:textSize="15sp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/notificationBannerViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Event"
            android:textSize="12sp"
            android:backgroundTint="#8A5ED6"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/notificationBannerCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#AAAAAA"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>


<LinearLayout
        android:id="@+id/top_menu_bar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#D3D3D3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menu bar -->
        <TextView
            android:id="@+id/tvHome"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Home"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvYourEvents"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Your Events"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvYourProfile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Profile"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNotifications"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Notifications"
            android:gravity="center"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Second menu bar -->
    <LinearLayout
        android:id="@+id/filter_bar"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="#E8E8E8"
        app:layout_constraintTop_toBottomOf="@id/top_menu_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvInterest"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Interest"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Date"
            android:gravity="center"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/events_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/filter_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Guidelines button -->
    <Button
        android:id="@+id/lottery_guidelines_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lottery Guidelines"
        android:backgroundTint="#8A5ED6"
        android:textColor="#FFFFFF"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/events_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Event List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/events_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lottery_guidelines_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp"
        android:clipToPadding="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/finalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Entrant List"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/finalSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrants confirmed for this event"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/finalList"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"/>

        <Button
            android:id="@+id/btnExportCsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export as CSV"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnBackFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
